

#include <stdio.h>
#define N sizeof(int)*8
int fun(int num)
{
    int c=0,c1=0,index=0;
    int bin[N];
   
    int n=sizeof(int )*8;
    index=N-1;
    while(index>0 && index>1)
    {
        bin[index]=num&1;
        index--;
        num=num>>1;
    }
    printf("decimal to binary convertion:");
    for(int i=0;i<N;i++)
    {
        printf("%d ",bin[i]);
        
    }
    int len=sizeof(bin)/sizeof(bin[0]);
    printf("\n no of binary number:%d",len);
}
int main()
{
    int num;
     printf("enter the number:");
    scanf("%d",&num);
    int (*fptr)(int )=fun;
    fptr(num);
    
}
